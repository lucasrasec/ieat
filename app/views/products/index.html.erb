<h1>Products</h1>

<table>
    <thead>
        <th> Nome </th>
        <th> Valor </th>
        <th> Restaurante </th>
    </thead>

    <tbody>
        <% @products.each do |p| %>
            <tr>
                <th><%= p.name %></th>
                <th><%= p.value %></th>
                <th><%= p.restaurant.name %></th>
            </tr>
        <% end %>
    </tbody>
</table>

